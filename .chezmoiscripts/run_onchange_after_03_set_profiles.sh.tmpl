#!/bin/bash

set -eufo pipefail

# profile.nix: {{ output "sha256sum" (joinPath .chezmoi.homeDir "nix-config/modules/profile.nix") | trim | default "n/a" }}
# flake.lock: {{ output "sha256sum" (joinPath .chezmoi.homeDir "nix-config/flake.lock") | trim | default "n/a" }}

echo ":: [03] Switching Nix profile"

# Source nix environment if not already available
if ! command -v nix &>/dev/null; then
    if [[ -f /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh ]]; then
        . /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh
    fi
fi

nix run ~/nix-config#{{ .hostname }}.switch
