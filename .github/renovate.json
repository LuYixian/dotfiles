{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 1am and before 5am"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 1am and before 3am every weekend"]
  },
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Auto-merge nix flake updates",
      "matchManagers": ["nix"],
      "automerge": true,
      "automergeSchedule": ["after 1am and before 5am"]
    },
    {
      "description": "Group all nix updates together",
      "matchManagers": ["nix"],
      "groupName": "nix dependencies"
    }
  ]
}
