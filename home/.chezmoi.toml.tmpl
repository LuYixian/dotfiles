encryption = "age"

[edit]
command = "code"
args = ["--wait"]

[diff]
pager = "diff-so-fancy"

[merge]
command = "bash"
args = [
    "-c",
    "cp {{ "{{ .Target }}" }} {{ "{{ .Target }}" }}.base && code --new-window --wait --merge {{ "{{ .Destination }}" }} {{ "{{ .Target }}" }} {{ "{{ .Target }}" }}.base {{ "{{ .Source }}" }}",
]

[age]
identity = "~/.ssh/personal"
recipientsFile = "~/.ssh/personal.pub"