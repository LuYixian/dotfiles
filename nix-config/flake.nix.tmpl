{
  description = "YixianLu's system flake";

  inputs = {
    # flake-utils
    flake-utils.url = "github:numtide/flake-utils";

    # nixpkgs
    nixpkgs.url = "github:NixOS/nixpkgs/nixpkgs-unstable";

    # flakey-profile (cross-platform package management)
    flakey-profile.url = "github:lf-/flakey-profile";
{{ if eq .chezmoi.os "darwin" }}
    # nix-darwin (macOS only)
    nix-darwin = {
      url = "github:LnL7/nix-darwin";
      inputs.nixpkgs.follows = "nixpkgs";
    };

    # mac-app-util (macOS only)
    mac-app-util.url = "github:hraban/mac-app-util";

    # nix-homebrew (macOS only)
    nix-homebrew.url = "github:zhaofengli-wip/nix-homebrew";
    homebrew-core = {
      url = "github:homebrew/homebrew-core";
      flake = false;
    };
    homebrew-cask = {
      url = "github:homebrew/homebrew-cask";
      flake = false;
    };
    homebrew-bundle = {
      url = "github:homebrew/homebrew-bundle";
      flake = false;
    };
{{ end -}}
  };

  outputs = inputs @ {
    self,
    flake-utils,
    nixpkgs,
    flakey-profile,
{{ if eq .chezmoi.os "darwin" -}}
    nix-darwin,
    mac-app-util,
    nix-homebrew,
    homebrew-core,
    homebrew-cask,
    homebrew-bundle,
{{ end -}}
    ...
  }: let
    {{ $arch := .chezmoi.arch -}}
    {{- if eq $arch "arm64" -}}
      {{- $arch = "aarch64" -}}
    {{- end -}}
    system = "{{ $arch }}-{{ .chezmoi.os }}";
    hostname = "{{ .hostname }}";
    username = "{{ .chezmoi.username }}";

    pkgs = import nixpkgs {
      inherit system;
      config = {
        allowUnfree = true;
      };
    };

    myProfile = import ./modules/profile.nix {
      inherit pkgs flakey-profile;
    };
{{ if eq .chezmoi.os "darwin" }}
    specialArgs =
      inputs
      // {
        inherit username hostname;
      };
{{ end -}}
  in {
{{ if eq .chezmoi.os "darwin" }}
    # ─────────────────────────────────────────────────────────────────────────
    # Darwin Configuration (macOS only)
    # Build with: darwin-rebuild switch --flake .#<hostname>
    # ─────────────────────────────────────────────────────────────────────────
    darwinConfigurations."${hostname}" = nix-darwin.lib.darwinSystem {
      inherit system specialArgs;
      modules = [
        ./modules/system.nix
        ./modules/apps.nix
        ./modules/host-users.nix
        mac-app-util.darwinModules.default
        nix-homebrew.darwinModules.nix-homebrew
        {
          nix-homebrew = {
            enable = true;
            enableRosetta = system == "aarch64-darwin";
            user = username;
          };
        }
      ];
    };
{{ end }}
    # ─────────────────────────────────────────────────────────────────────────
    # Package Profile (cross-platform)
    # Install with: nix profile install .#<hostname>
    # ─────────────────────────────────────────────────────────────────────────
    packages.${system}."${hostname}" = myProfile;

    # nix code formatter
    formatter.${system} = nixpkgs.legacyPackages.${system}.alejandra;
  };
}
