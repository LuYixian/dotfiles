{
  "permissions": {
    "deny": [
      "Bash(sudo rm -rf:*)",
      "Read(.env.local)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/enforce-uv.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/block-git-rewrites.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/format-python.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/format-code.sh"
          }
        ]
      }
    ]
  }
}
