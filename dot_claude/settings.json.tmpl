{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sequential-thinking"]
    }
  },
  "permissions": {
    "deny": [
      "Bash(sudo rm -rf:*)",
      "Bash(rm -rf /*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(python -m pip:*)",
      "Bash(python3 -m pip:*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env.*.local)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(**/secrets/**)",
      "Read(**/.secrets/**)",
      "Write(.env*)",
      "Write(**/credentials*)",
      "Write(**/secrets/**)"
    ],
    "allow": [
      "Bash(uv:*)",
      "Bash(uvx:*)",
      "Bash(ruff:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(just:*)",
      "Bash(mise:*)",
      "Bash(nix:*)",
      "Bash(chezmoi:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/skill-hint.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-uv.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-git-rewrites.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-main-edits.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-python.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-code.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "INSIDE_CLAUDE_CODE": "1",
{{- $provider := .claudeProvider | default "anthropic" }}
{{- $config := index .claude.providers $provider }}
{{- if and $config $config.base_url }}
{{- $apiKey := output "sh" "-c" (printf "gopass show -o claude-code/providers/%s/api_key 2>/dev/null || true" $provider) | trim }}
    "ANTHROPIC_BASE_URL": "{{ $config.base_url }}",
    "ANTHROPIC_AUTH_TOKEN": "{{ $apiKey }}",
    "ANTHROPIC_MODEL": "{{ $config.model }}",
    "ANTHROPIC_SMALL_FAST_MODEL": "{{ $config.small_model }}",
{{- end }}
    "_CLAUDE_PROVIDER": "{{ $provider }}"
  }
}
