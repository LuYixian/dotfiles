{{- /* Get account from claudeProviderAccount */ -}}
{{- $accountKey := "anthropic" -}}
{{- if hasKey . "claudeProviderAccount" -}}
{{-   $accountKey = .claudeProviderAccount -}}
{{- else if hasKey . "claudeProvider" -}}
{{-   $accountKey = .claudeProvider -}}
{{- end -}}
{{- /* Get account config */ -}}
{{- $account := index .claude.accounts $accountKey -}}
{{- /* Get provider name (from account.provider or extract from accountKey) */ -}}
{{- $providerName := (split "@" $accountKey)._0 -}}
{{- if and $account (hasKey $account "provider") -}}
{{-   $providerName = $account.provider -}}
{{- end -}}
{{- /* Get provider config for base_url */ -}}
{{- $provider := index .claude.providers $providerName -}}
{{- /* Get defaults */ -}}
{{- $defaults := .claude.defaults -}}
{
{{- if and $provider (hasKey $provider "base_url") }}
  "apiKeyHelper": "~/.local/bin/claude-token",
{{- end }}
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sequential-thinking"]
    }
  },
  "permissions": {
    "deny": [
      "Bash(sudo rm -rf:*)",
      "Bash(rm -rf /*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(python -m pip:*)",
      "Bash(python3 -m pip:*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env.*.local)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(**/secrets/**)",
      "Read(**/.secrets/**)",
      "Write(.env*)",
      "Write(**/credentials*)",
      "Write(**/secrets/**)"
    ],
    "allow": [
      "Bash(uv:*)",
      "Bash(uvx:*)",
      "Bash(ruff:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(just:*)",
      "Bash(mise:*)",
      "Bash(nix:*)",
      "Bash(chezmoi:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/skill-hint.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-uv.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-git-rewrites.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-main-edits.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-python.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-code.sh"
          }
        ]
      }
    ]
  },
  "env": {
{{- if and $provider (hasKey $provider "base_url") }}
    "ANTHROPIC_BASE_URL": "{{ $provider.base_url }}",
{{- if and $account (hasKey $account "model") }}
    "ANTHROPIC_MODEL": "{{ $account.model }}",
{{- end }}
{{- if and $account (hasKey $account "small_model") }}
    "ANTHROPIC_SMALL_FAST_MODEL": "{{ $account.small_model }}",
{{- end }}
{{- /* timeout_ms: account -> defaults */ -}}
{{- $timeout := "" -}}
{{- if and $account (hasKey $account "timeout_ms") }}{{ $timeout = $account.timeout_ms }}{{ else if hasKey $defaults "timeout_ms" }}{{ $timeout = $defaults.timeout_ms }}{{ end -}}
{{- if $timeout }}
    "API_TIMEOUT_MS": "{{ $timeout }}",
{{- end }}
{{- /* disable_nonessential_traffic: account -> defaults */ -}}
{{- $disableTraffic := false -}}
{{- if and $account (hasKey $account "disable_nonessential_traffic") }}{{ $disableTraffic = $account.disable_nonessential_traffic }}{{ else if hasKey $defaults "disable_nonessential_traffic" }}{{ $disableTraffic = $defaults.disable_nonessential_traffic }}{{ end -}}
{{- if $disableTraffic }}
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
{{- end }}
{{- if and $account (hasKey $account "haiku_model") }}
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "{{ $account.haiku_model }}",
{{- end }}
{{- if and $account (hasKey $account "sonnet_model") }}
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "{{ $account.sonnet_model }}",
{{- end }}
{{- if and $account (hasKey $account "opus_model") }}
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "{{ $account.opus_model }}",
{{- end }}
{{- end }}
    "INSIDE_CLAUDE_CODE": "1"
  }
}
