{{- $provider := .claudeProvider | default "anthropic" -}}
{{- $config := index .claude.providers $provider -}}
{
{{- if and $config $config.base_url }}
  "apiKeyHelper": "~/.local/bin/claude-get-token",
{{- end }}
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sequential-thinking"]
    }
  },
  "permissions": {
    "deny": [
      "Bash(sudo rm -rf:*)",
      "Bash(rm -rf /*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(python -m pip:*)",
      "Bash(python3 -m pip:*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env.*.local)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(**/secrets/**)",
      "Read(**/.secrets/**)",
      "Write(.env*)",
      "Write(**/credentials*)",
      "Write(**/secrets/**)"
    ],
    "allow": [
      "Bash(uv:*)",
      "Bash(uvx:*)",
      "Bash(ruff:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(just:*)",
      "Bash(mise:*)",
      "Bash(nix:*)",
      "Bash(chezmoi:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/skill-hint.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-uv.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-git-rewrites.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/block-main-edits.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-python.sh"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/format-code.sh"
          }
        ]
      }
    ]
  },
  "env": {
{{- if and $config $config.base_url }}
    "ANTHROPIC_BASE_URL": "{{ $config.base_url }}",
    "ANTHROPIC_MODEL": "{{ $config.model }}",
    "ANTHROPIC_SMALL_FAST_MODEL": "{{ $config.small_model }}",
{{- if $config.timeout_ms }}
    "API_TIMEOUT_MS": "{{ $config.timeout_ms }}",
{{- end }}
{{- if $config.disable_nonessential_traffic }}
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
{{- end }}
{{- if $config.haiku_model }}
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "{{ $config.haiku_model }}",
{{- end }}
{{- if $config.sonnet_model }}
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "{{ $config.sonnet_model }}",
{{- end }}
{{- if $config.opus_model }}
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "{{ $config.opus_model }}",
{{- end }}
{{- end }}
    "INSIDE_CLAUDE_CODE": "1"
  }
}
